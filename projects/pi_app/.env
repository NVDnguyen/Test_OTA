# .env

# --- Application Configuration ---
# Set to "development" or "production"
APP_ENV=development

# --- Database & Cache ---
# Service names (mongo, redis) are used here for Docker Compose networking
MONGO_URI=mongodb://mongo:27017/shopping_cart_db
REDIS_URI=redis://redis:6379/0

# --- Security ---
# IMPORTANT: Use 'openssl rand -hex 32' to generate strong keys for production
JWT_SECRET_KEY=a-very-strong-and-long-secret-key-for-production-change-me
VIETQR_WEBHOOK_SECRET_KEY=another-strong-secret-for-vietqr-webhooks-change-me

# --- Initial Admin User ---
ADMIN_EMAIL=admin@example.com

# --- VietQR Configuration ---
VIETQR_BANK_BIN=970436
VIETQR_ACCOUNT_NO=1234567890
VIETQR_ACCOUNT_NAME="NGUYEN VAN A"